<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sundata.admin.mapper.MessageMapper">

	<select id="getAll" resultType="com.sundata.admin.model.MessageModel">
	select * from tb_message 
	</select>
<update id="changeNoUse">
update tb_message set isUse = '2' where messageId != #{messageId} 
</update>
<update id="changeUse">
update tb_message set isUse = #{isUse} where messageId = #{messageId} 
</update>
</mapper>